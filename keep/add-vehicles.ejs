<%- include("../partials/header", { title: title }) %>

<h1>Add New Vehicle</h1>

<% if (errors.length) { %>
  <div class="errors">
    <% errors.forEach(e => { %><p><%= e %></p><% }) %>
  </div>
<% } %>

<form method="POST" action="/inv/add-vehicle">

  <label>Classification</label>
  <%- classificationList %>

  <label>Make</label>
  <input type="text" name="inv_make" value="<%= data.inv_make || '' %>" required>

  <label>Model</label>
  <input type="text" name="inv_model" value="<%= data.inv_model || '' %>" required>

  <label>Description</label>
  <textarea name="inv_description" required><%= data.inv_description || '' %></textarea>

  <label>Image Path</label>
  <input type="text" name="inv_image" value="/images/vehicles/no-image.png">

  <label>Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" value="/images/vehicles/no-image.png">

  <label>Price</label>
  <input type="number" step="0.01" name="inv_price" value="<%= data.inv_price || '' %>" required>

  <label>Year</label>
  <input type="number" name="inv_year" value="<%= data.inv_year || '' %>" required>

  <label>Miles</label>
  <input type="number" name="inv_miles" value="<%= data.inv_miles || '' %>" required>

  <label>Color</label>
  <input type="text" name="inv_color" value="<%= data.inv_color || '' %>" required>

  <button type="submit">Add Vehicle</button>
</form>

<%- include("../partials/footer") %>

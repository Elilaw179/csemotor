<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/nav') %>

  <main>
    <h1>Add Inventory Item</h1>

    <% if (errors && errors.length) { %>
      <section class="flash error"><ul>
        <% errors.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul></section>
    <% } %>

    <form id="addInventoryForm" action="/inventory/add-inventory" method="POST" novalidate>
      <label for="classificationList">Classification</label>
      <%= classificationList %>

      <label for="inv_make">Make</label>
      <input id="inv_make" name="inv_make" type="text" value="<%= (data && data.inv_make) ? data.inv_make : '' %>" required>

      <label for="inv_model">Model</label>
      <input id="inv_model" name="inv_model" type="text" value="<%= (data && data.inv_model) ? data.inv_model : '' %>" required>

      <label for="inv_year">Year</label>
      <input id="inv_year" name="inv_year" type="number" value="<%= (data && data.inv_year) ? data.inv_year : '' %>" required>

      <label for="inv_price">Price</label>
      <input id="inv_price" name="inv_price" type="number" step="0.01" value="<%= (data && data.inv_price) ? data.inv_price : '' %>" required>

      <label for="inv_miles">Miles</label>
      <input id="inv_miles" name="inv_miles" type="number" value="<%= (data && data.inv_miles) ? data.inv_miles : '' %>" required>

      <label for="inv_color">Color</label>
      <input id="inv_color" name="inv_color" type="text" value="<%= (data && data.inv_color) ? data.inv_color : '' %>" required>

      <label for="inv_image">Image path (e.g. /images/vehicles/example.jpg)</label>
      <input id="inv_image" name="inv_image" type="text" value="<%= (data && data.inv_image) ? data.inv_image : '/images/vehicles/no-image-available.png' : '/images/vehicles/no-image-available.png' %>" required>

      <label for="inv_thumbnail">Thumbnail path (e.g. /images/vehicles/example-tn.jpg)</label>
      <input id="inv_thumbnail" name="inv_thumbnail" type="text" value="<%= (data && data.inv_thumbnail) ? data.inv_thumbnail : '/images/vehicles/no-image-available-tn.png' %>" required>

      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" rows="5" required><%= (data && data.inv_description) ? data.inv_description : '' %></textarea>

      <button type="submit">Add Vehicle</button>
    </form>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/validation.js"></script>
</body>
</html>

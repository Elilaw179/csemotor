<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/nav') %>

  <main>
    <h1>Add Classification</h1>

    <% if (errors && errors.length) { %>
      <section class="flash error"><ul>
        <% errors.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul></section>
    <% } %>

    <form id="addClassificationForm" action="/inventory/add-classification" method="POST" novalidate>
      <label for="classification_name">Classification name (no spaces or special chars):</label>
      <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9_]+$" maxlength="30">
      <button type="submit">Add Classification</button>
    </form>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/validation.js"></script>
</body>
</html>
